{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ServerConfig": {
    "AllowedHosts": "*",
    "CorsAllowedOrigins": []
  },
  "AuthenticationConfig": {
    "Secret": "secret",
    "RefreshExpiration": 86400000,
    "AccessExpiration": 900000
  },
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=database;Username=user;Password=password"
  },
  "Paths": {
    "Uploads": "uploads",
    "Avatars": "avatars"
  },
  "Regex": {
    "Password": "^(?=.*[A-Z])(?=.*[!#$%*+=?|\\-])(?=.*\\d)[!#$%*+=?|\\-A-Za-z\\d]{12,}$"
  }
}
